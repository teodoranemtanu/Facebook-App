@model FbApp.Dtos.PostFormModel
@using FbApp.Utilities

@{
    ViewData["Title"] = "Delete Post";
}
<h3 class="text-center">@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <hr />
        <form method="post" enctype="multipart/form-data">
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(m => m.Feeling)
                <p class="form-control"> @Model.Feeling </p>

                @Html.ValidationMessageFor(m => m.Feeling, "", new { @class = "text-danger" })

            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Text)
                <p class="form-control"> @Model.Text </p>
                @Html.ValidationMessageFor(m => m.Text, "", new { @class = "text-danger" })
            </div>

            <div class="row">
                <img src="@Model.Photo.ToRenderablePictureString()" class="img-responsive" alt="Avatar">
            </div>

            <div>
                <button type="submit" class="btn btn-danger col-md-offset-0">Delete</button>
                <button formaction='javascript:history.go(-1)' class="btn btn-default col-md-offset-0">Cancel</button>
            </div>
        </form>
    </div>
</div>
